.main-pull-list {
  display: -webkit-box;
}
.main-pull-group {
  width: 47%; margin-left: 2%;
}
.main-pull-item {
  break-inside: avoid;
  /*min-height: 500rpx;*/
  width: 100%;
  margin: 0 0 20rpx;
  background-color: white;
  box-shadow:0rpx 5rpx 20rpx 0rpx #e4ecf2;
  border-radius: 10rpx;
  overflow: hidden;
}
.pull-img-conainer {
  width: 100%;
  min-height: 200rpx;
  /*background-color: #88cae8;*/
}
.pull-img-conainer image {
  width: 100%;
}
.pull-info-container {
  padding: 0 10rpx 10rpx;
}
.pull-title {
  color: #22292c;
  font-size: 30rpx;
  font-weight: 500;
  overflow: hidden;
  -o-text-overflow: ellipsis;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 10rpx;
}
.pull-subtitle {
  font-size: 28rpx;
  overflow: hidden;
  -o-text-overflow: ellipsis;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}
.pull-footer {
  color: #747f8b;
  font-size: 36rpx;
  display: -webkit-box;
  line-height: 42rpx;
  margin-top: 8rpx;
}
.pull-avator {
  display: inline-block; height: 50rpx; width: 50rpx; background-color: black; border-radius: 100%; overflow: hidden;
  margin-right: 8rpx;
}
.pull-avator image {
  width: 100%;
  height: 100%;
}
.pull-name {
  font-size: 28rpx; line-height: 50rpx; overflow: hidden;
  -o-text-overflow: ellipsis;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding-left: 8rpx;
}
.pull-footer .sub-title-name {
  display: flex; -webkit-box-flex: 1;
}
.pull-footer .sub-title-icon {
  height: 36rpx;
  display: flex; text-align: right;
}
.pull-footer .sub-title-icon image {
  width: 36rpx; height: 36rpx;
}