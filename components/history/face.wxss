.main-pull-list {
   background: white;
   padding-top: 40rpx;
}
.main-pull-group {
}
.main-pull-ct {
  height: 180rpx;
  display: -webkit-box;
  position: relative;
}
.main-pull-ct::before, .main-pull-ct::after {
  position: absolute; display: block; content: '';
  left: 100rpx;
}
.main-pull-ct::before {
  top: 16%; margin-left: -8rpx;
  width: 8rpx; height: 8rpx; border-radius: 100%;
  border: 4rpx solid #40c2fc; background: white;
  z-index: 2;
}
.main-pull-ct:nth-child(2n)::before {
}

.main-pull-ct::after {
  top: 0;
  width: 4rpx;
  margin-left: -2rpx;
  height: 100%;
  background: #f1f9ff;
}

.main-pull-date {
  text-align: left;
  color: #747f8b;
  width:120rpx;
  padding-left:20rpx;
}
.main-pull-date .main-date-title {
  font-size: 32rpx;
}
.main-pull-date .main-date-subtitle {
  font-size: 24rpx;
}
.main-pull-item {
  -webkit-box-flex: 1;
  display: -webkit-box;
}

.main-sp-day {
  position: absolute; z-index: 3; top: 50%; left: 16%;
  width: 68%; margin-top: -30rpx;
  background: white; border: 4rpx solid #40c2fc; border-radius: 8rpx;
  color: #40c2fc; text-align: center;
}
.pull-img-conainer {
  width: 140rpx; margin-right: 40rpx;
}
.pull-img-conainer image {
  width: 140rpx; height: 140rpx; margin: 0 4rpx; border-radius: 12rpx;
}
.pull-info-container {
  -webkit-box-flex: 1;
}
.pull-title {
  padding: 6rpx 4rpx;
  width: 100%;
  font-size: 28rpx;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  text-overflow: ellipsis;
  word-break: break-all;
  overflow: hidden;
  white-space: normal;
}
