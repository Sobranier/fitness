<template name="face-history">
  <view class="main-pull-list">
    <view class="main-pull-group" wx:for="{{list}}" wx:for-index="i" wx:for-item="single" wx:key="i">
      <!--
      <view class="main-pull-title">{{single.name}}</view>
      -->
      <view class="main-pull-ct" wx:for="{{single.data}}" wx:for-index="j" wx:for-item="item" wx:key="j">
        <block wx:if="{{item.type !== 'sp-day'}}">
          <view class="main-pull-date">
            <view class="main-date-title">{{item.day.day}}</view>
            <view class="main-date-subtitle">{{item.day.month}}æœˆ</view>
          </view>
          <view class="main-pull-item">
            <view class="pull-img-conainer" wx:if="{{item.type === 'img'}}">
              <image mode="aspectFill" src="{{item.imgUrl[0]}}" bindtap='handlePreview'></image>
            </view>
            <view class="pull-info-container">
              <view class="pull-title {{item.type === 'word' ? 'pull-title-word' : ''}}">
                {{item.title}}
              </view>
            </view>
          </view>
        </block>
      </view>
    </view>
  </view>
</template>