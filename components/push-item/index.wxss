.static-title {
  text-align: center;
  margin-top: 60rpx;
}
.static-title-select {
  margin-top: 10rpx;
}
.static-title-select .static-content-title {
  line-height: 64rpx;
}
.static-content-title {
  font-size: 32rpx;
}
.static-content-title .active {
  color: #40c2fc;
}
.static-content-subtitle {
  font-size: 40rpx;
  color: #40c2fc;
  line-height: 60rpx;
}

.static-content-date {
  display: -webkit-box;
  width: 50%; margin: 20rpx auto;
}
.static-content-date view {
  width: 30%; box-shadow:0rpx 0rpx 10rpx 0rpx #e4ecf2;
  margin: 0 1.6%;
  padding: 16rpx 0;
}

.push-btn {
  position: fixed; z-index: 2;
  width: 50%; left: 25%; bottom: 44rpx;
  background: #40c2fc; color: white; height: 84rpx; line-height: 84rpx; text-align: center;
  border-radius: 64rpx;
}
.add-img {
  margin: 24rpx auto 240rpx;
  width: 160rpx; height: 160rpx; border: 2rpx dashed #ececec;
}
.add-img image {
  width: 100%; height: 100%;
}

.static-scroll {
  height:180rpx;
  width:100%;
  white-space:nowrap;
}
.static-scroll-item {
  display:inline-block;
  height: 140rpx; width: 140rpx;
  margin-left:20rpx; margin-top: 20rpx;
  box-shadow:0rpx 0rpx 20rpx 0rpx #e4ecf2;
  border-radius: 100%; overflow: hidden;
}
.static-scroll-item.active {
  box-shadow:0rpx 0rpx 20rpx 0rpx #ffc076;
}
.static-scroll-item image {
  display: block; width: 100%; height: 100%;
}
.static-scroll-item:last-child {
  margin-right: 20rpx;
}

.select-container {
  display: -webkit-box; box-shadow:0rpx 0rpx 10rpx 0rpx #e4ecf2;
 width: 80%; margin: 0 auto;
}
.select-container>scroll-view {
  width: 50%; height: 400rpx;
}
.select-item {
  height: 80rpx; line-height: 80rpx; font-size: 32rpx;
}
.select-item.active {
  color: #40c2fc;
}
.select-tip {
  padding: 40rpx 0 20rpx; text-align: left; font-size: 24rpx; color: #22292c;
}
.select-tip.single-tip {
  padding-top: 100rpx;
}
.select-sublist {
  text-align: left;
  font-size: 28rpx; line-height: 64rpx;
}
.select-sublist .active {
  color: #40c2fc;
}