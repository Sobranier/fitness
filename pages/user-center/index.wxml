<!--index.wxml-->
<view class="container">
  <view class="userinfo">
    <view class="userinfo-info">
      <view class="userinfo-nickname">{{userInfo.nickName}}</view>
      <view class="userinfo-follow">
        <view class="follow-er" bindtap="gotoFans">
          <text class="follow-num">123</text>
          <view>粉丝</view>
        </view>
        <view class="follow-ing" bindtap="gotoFans">
          <text class="follow-num">999</text>
          <view>关注</view>
        </view>
      </view>
      <view class="userinfo-location">
        北京
      </view>
    </view>
    <view class="userinfo-img" bindtap="gotoFace">
      <image wx:if="{{hasUserInfo}}" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="aspectFill"></image>
    </view>
  </view>
  <view class="userinfo-link">
    <view>
      <image mode="widthFix" src="/images/icon/pic.png" bindtap="switchDatepicker"></image>
      <view>图</view>
    </view>
    <view>
      <image mode="widthFix" src="/images/icon/artical.png" bindtap="switchDatepicker"></image>
      <view>文</view>
    </view>
    <view>
      <image mode="widthFix" src="/images/icon/save_active.png" bindtap="switchDatepicker"></image>
      <view>收藏</view>
    </view>
  </view>
  <view class="user-group">
    <view>
      <view>
        <image class="setting-icon" mode="widthFix" src="/images/icon/modify_grey.png"></image>
        修改个人信息
      </view>
      <image class="arrow-icon" mode="widthFix" src="/images/icon/arrow-right.png" bindtap="switchDatepicker"></image>
    </view>
    <view>
      <view>
        <image class="setting-icon" mode="widthFix" src="/images/icon/mail.png"></image>
        消息
      </view>
      <image class="arrow-icon" mode="widthFix" src="/images/icon/arrow-right.png" bindtap="switchDatepicker"></image>
    </view>
    <view>
      <view>
        <image class="setting-icon" mode="widthFix" src="/images/icon/setting.png"></image>
        设置
      </view>
      <image class="arrow-icon" mode="widthFix" src="/images/icon/arrow-right.png" bindtap="switchDatepicker"></image>
    </view>
  </view>
  <view class="usermotto">
    <view class="user-motto">{{motto}}
      <contact-button
        type="default-dark" 
        size="20"
        session-from="weapp"
        class="contact-button"
      >
      </contact-button>
    </view>
  </view>
</view>
