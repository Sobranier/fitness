@import '/components/active-list/index.wxss';

page {
  height: 100%;
}
page .container {
  height: 100%;
}

.comment-container {
  background: white;
  box-shadow:0rpx 5rpx 20rpx 0rpx #e4ecf2;
  padding: 0 20rpx;
}
.comment-container .comment-title {
  line-height: 48rpx; font-size: 32rpx;
}
.comment-item {
  display: -webkit-box; padding: 16rpx 0; font-size: 32rpx;
}
.comment-item .comment-item-left {
  width: 64rpx; height: 64rpx; margin-right: 20rpx;
}
.comment-item .comment-item-right {
  -webkit-box-flex: 1;
}
.comment-item .comment-item-left image {
  width: 100%; height: 100%; border-radius: 100%;
}
.comment-item-header {
  font-weight: bold; color: #22292c; font-size: 28rpx;
}
.comment-item-header text {
  float: right; color: #d4d7dd; font-weight: normal;
}