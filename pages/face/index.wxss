@import '/components/history/face.wxss';

page {
  height: 100%;
}
page .container {
  height: 100%;
}

.userinfo {
  display: flex;
  flex-direction: column;
  position: relative;
  align-items:center; justify-content:center;
  height: 200rpx; width: 100%;
  padding: 40rpx 0;
  z-index: 6;
}

.userinfo::after {
  display: block; content: '';
  background-image: url('https://img-oss.yunshanmeicai.com/weixin/mall/cdn/img/test/stars-lg.png');
  background-size: cover;
  background-color: #22292c;
  position: absolute; top: 0; left: 0;
  z-index: 0;
  width: 100%;
  height: 100%;
}
.userinfo .shooting-star {
  position: absolute;
  z-index: 10;
  height: 40rpx;
  opacity: 1;
}
.userinfo .shooting-star-1 {
  top: 0;
  left: -15%;
  animation:starMove1 15s infinite;
}
.userinfo .shooting-star-3 {
  top: 20rpx;
  left: -5%;
  animation:starMove3 15s infinite;
}

.userinfo .shooting-star-4 {
  top: 100rpx;
  left: -15%;
  animation:starMove4 15s infinite;
}
.userinfo .shooting-star-5 {
  top: 100rpx;
  left: 25%;
  animation:starMove5 15s infinite;
  z-index: 3;
}
.userinfo .shooting-star-6 {
  top: 120rpx;
  left: 40%;
  animation:starMove6 15s infinite;
}

.userinfo .userinfo-front, .userinfo .userinfo-back {
  position: absolute; top: 0; left: 50%; margin-left: -300rpx;
  width: 600rpx;
  height: 200rpx;
}
.userinfo .userinfo-front {
  z-index: 4;
}
.userinfo .userinfo-back {
  z-index: 1;
}
.user-title {
  position: absolute; bottom: 20rpx; left: 10%; width: 80%; z-index: 2; color: white;
  display: flex; align-items: center; justify-content: space-around;
}
.user-sub-title {
  width: 80%; margin: 20rpx auto; color: #22292c; font-size: 28rpx;
}
.user-sub-title>view {
  display: inline-block; width: 33.33%; text-align: center;
  height: 48rpx; line-height: 48rpx;
}
.userinfo-avatar {
  position: absolute; top: 21rpx; left: 50%;
  width: 158rpx; height: 158rpx;
  margin-left: -79rpx;
  border-radius: 50%;
  z-index: 2;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
@keyframes starMove1 {
 0% { opacity: 0; transform: rotate(150deg); }
 5% { opacity: 1; }
 10% { opacity: 0;  transform: rotate(150deg) translate(200rpx); }
 100% { opacity: 0;  transform: rotate(150deg) translate(0); }
}
@keyframes starMove5 {
 0% { opacity: 0; transform: rotate(150deg); }
 20% { opacity: 0; transform: rotate(150deg); }
 25% { opacity: 1; }
 30% { opacity: 0;  transform: rotate(150deg) translate(200rpx); }
 100% { opacity: 0;  transform: rotate(150deg) translate(0); }
}
@keyframes starMove3 {
 0% { opacity: 0; transform: rotate(150deg); }
 40% { opacity: 0; transform: rotate(150deg); }
 45% { opacity: 1; }
 50% { opacity: 0;  transform: rotate(150deg) translate(200rpx); }
 100% { opacity: 0;  transform: rotate(150deg) translate(0); }
}
@keyframes starMove4 {
 0% { opacity: 0; transform: rotate(150deg); }
 60% { opacity: 0; transform: rotate(150deg); }
 65% { opacity: 1; }
 70% { opacity: 0;  transform: rotate(150deg) translate(200rpx); }
 100% { opacity: 0;  transform: rotate(150deg) translate(0); }
}
@keyframes starMove6 {
 0% { opacity: 0; transform: rotate(150deg); }
 80% { opacity: 0; transform: rotate(150deg); }
 85% { opacity: 1; }
 90% { opacity: 0;  transform: rotate(150deg) translate(200rpx); }
 100% { opacity: 0;  transform: rotate(150deg) translate(0); }
}

.static-title {
  padding-left: 20rpx; line-height: 64rpx; margin-top: 28rpx; font-size: 28rpx; background: white;
}
.static-scroll {
  white-space:nowrap; height: 180rpx; background: white;
}
.static-scroll-item {
  display: inline-block; width: 300rpx;
  padding:16rpx;
  height:108rpx;
  margin-left:20rpx; margin-top: 20rpx;
  box-shadow:0rpx 0rpx 20rpx 0rpx #e4ecf2;
  position:relative;
}
.static-scroll-item:last-child {
  margin-right: 20rpx;
}
.static-scroll-item image.card-face {
  width: 100rpx; height: 100rpx; display: inline-block; border-radius: 100%;
}
.static-scroll-item .icon-arrow {
  position: absolute; width: 40rpx; height: 40rpx; top: 50%; margin-top: -20rpx; right: 20rpx; z-index: 2;
}
.static-scroll-item-info {
  display: inline-block; width: 180rpx; height: 60rpx; position: absolute; top: 0; right: 0; padding: 20rpx;
}
.static-scroll-item-info .item-info-title {
  font-size: 32rpx; line-height: 48rpx; color: #22292c;
}
.static-scroll-item-info .item-info-subtitle {
  font-size: 24rpx;
}