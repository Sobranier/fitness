@import '/components/history/index.wxss';

page {
  background: white;
  height: 100%;
}
page .container {
  height: 100%;
}

.card-item {
  width: 90%; height: 36%;
  margin: 20rpx auto 40rpx;
  border-radius: 32rpx;
  overflow: hidden;
  /*box-shadow: 0rpx 2rpx 10rpx 0rpx;*/
  position: relative;
}
.card-item image.card-main {
  width: 100%;
  height: 100%;
}
.modify-icon {
  width: 52rpx;
  height: 52rpx;
  position: absolute;
  right: 18rpx; top: 18rpx;
}
.card-info {
  position: absolute; bottom: 0; left: 0;
  width: 90%; padding: 5%;
  color: white;
  z-index: 2;
  text-align: right;
}
.card-info::after {
  z-index: -1;
  display: block; content: '';
  background: rgba(100%, 100%, 100%, 0.2);
  position: absolute; width: 100%; height: 100%;
  left: 0; top: 0;
}
.info-title {
  display: flex; justify-content: flex-end;
  font-size: 44rpx;
  margin-bottom: 10rpx;
}
.info-title .info-title-icon {
  width: 60rpx; height: 60rpx; margin-left: 10rpx; display: inline-block;
}
.info-title .info-title-icon image {
  width: 100%; height: 100%;
}
.info-subtitle {
  font-size: 32rpx;
}

.info-list {
  width: 100%;
  height: 96rpx;
  white-space: nowrap; margin-bottom: 30rpx;
}
.info-list-item {
  display: inline-block;
  height: 80rpx; padding: 4rpx;
  line-height: 80rpx;
  width: 38%;
  margin-left: 6%;
  border: 4rpx solid #f1f9ff; background-color: #f1f9ff;
  font-size: 36rpx;
  text-align: center;
  border-radius: 16rpx;
}
.info-list-item image {
  display: inline-block;
  width: 36rpx; 
}
.info-list-item:nth-last-child(1) {
  margin-right: 6%;
}
