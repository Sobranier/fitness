.main-popup-wrapper {
    position: absolute;
    width:100%;
    height:100%;
    z-index:10;
}
.main-popup {
    position: absolute;
    bottom: 0;
    height: 640rpx;
    width: 100%;
    background-color: white;
}
.popup-title {
    position: relative;
    height: 96rpx;
    line-height: 96rpx;
    background-color: beige;
    text-align: center;
}
.popup-title icon.right-icon {
    position: absolute;
    top: 16rpx;
    right: 16rpx;
}
.popup-title icon.left-icon {
    position: absolute;
    top: 18rpx;
    left: 16rpx;
}
.popup-show view {
    font-size: 48rpx;
    font-weight: bold;
    width: 33.3%;
    float: left;
    text-align: center;
    line-height: 128rpx;
}