/* pages/push-weight/index.wxss */
page {
  background-color: white;
}
.static-title {
  text-align: center;
  margin-top: 60rpx;
}
.static-content-title {
  font-size: 32rpx;
}
.static-content-subtitle {
  font-size: 40rpx;
  color: #53e69d;
  line-height: 60rpx;
}
.static-content-date {
  display: -webkit-box;
  width: 50%; margin: 20rpx auto;
}
.static-content-date view {
  width: 30%; box-shadow:0rpx 0rpx 10rpx 0rpx #e4ecf2;
  margin: 0 1.6%;
  padding: 16rpx 0;
}
.show-area {
  background-color: #ff7676;
  color: white;
  width: 160rpx; margin: 36rpx auto 44rpx;
  padding: 16rpx 0; border-radius: 16rpx; position: relative;
}
.show-area::before {
  width: 20rpx; height: 20rpx; background-color: #ff7676; position: absolute;
  display: block; content: '';
  bottom: -10rpx; left: 50%; transform:rotate(45deg); margin-left: -14rpx;
}
.show-area::after {
  display: block; content: ''; position: absolute;
  width: 6rpx; height: 90rpx; left: 50%; margin-left: -6rpx; border-radius: 20rpx; background-color: #ff7676; 
  bottom: -120rpx; z-index: 2;
}
.scroll-area {
  height: 180rpx; width: 90%; margin: 0 auto; white-space:nowrap;
  position: relative;
}
.scroll-item {
  display: inline-block; width: 30%; height: 100rpx; text-align: right; vertical-align: middle; line-height: 100%;
}
.scroll-item:first-child {
  margin-left: 50%;
}
.scroll-item:last-child {
  margin-right: 50%;
}
.scroll-area::before, .scroll-area::after {
  position: absolute;
  display: block; content: '';
  height: 100%;
  background: rgba(100%, 100%, 100%, 0.9);
  pointer-events: none;
  z-index: 2;
  top: 0;
  width: 20%;
}
.scroll-area::before {
  left: 0;
}
.scroll-area::after {
  right: 0;
}
.line-container {
  height: 70%; display: flex; align-items: flex-start;
}
.line-container view {
  width: 10%; height: 30%;
  border-left: 3rpx solid black;
}
.line-container view.middle-line {
  height: 40%;
}
.line-container view.long-line {
  height: 50%;
}
.line-container + view {
  height: 72rpx; line-height: 72rpx;
}
.push-btn {
  position: fixed; z-index: 2;
  width: 50%; left: 25%; bottom: 40rpx;
  background: #3ac47f; color: white; height: 84rpx; line-height: 84rpx; text-align: center;
  border-radius: 64rpx;
}
.add-img {
  margin: 20rpx auto 240rpx;
  width: 160rpx; height: 160rpx; border: 2rpx dashed #ececec;
}
.add-img image {
  width: 100%; height: 100%;
}