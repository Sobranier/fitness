@import '/components/pull-list/index.wxss';
@import '/components/active-list/index.wxss';
@import '/components/topic-list/index.wxss';

page {
  height: 100%; background: white;
}
.container {
  height: 100%;
}
.list-container-follow {
  background: #f1f9ff;
}
.tab-bar {
  height: 8%;
  display: -webkit-flex; justify-content: center; align-items: center;
  font-size: 28rpx;
}
.tab-bar view {
  width: 16%; margin: 0 2%; text-align: center; line-height: 64rpx;border-radius: 10rpx;
}
.tab-bar view.active, .tab-bar view.clicked {
  background-color: #f1f9ff;
}
.tab-bar view.active {
  color: #40c2fc;
}
.list-container {
  height: 92%; display: none;
}
.list-container.show {
  display: block;
}